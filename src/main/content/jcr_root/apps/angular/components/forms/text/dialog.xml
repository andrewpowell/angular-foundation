<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="475"
    title="Input Details"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Panel"
        xtype="panel">
        <items jcr:primaryType="cq:WidgetCollection">
            <requiredItems
                jcr:primaryType="cq:Widget"
                title="Required Items"
                xtype="dialogfieldset">
                <items jcr:primaryType="cq:WidgetCollection">
                    <displayLabel
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Display Label"
                        name="./label"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <ngModel
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="ng-model"
                        name="./ng-model"
                        validateOnBlur="true"
                        xtype="textfield"/>
                </items>
            </requiredItems>
            <optionalItems
                jcr:primaryType="cq:Widget"
                collapsed="{Boolean}true"
                collapsible="{Boolean}true"
                title="Optional Items"
                xtype="dialogfieldset">
                <items jcr:primaryType="cq:WidgetCollection">
                    <name
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="name"
                        name="./name"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <placeholder
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="placeholder"
                        name="./placeholder"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <required
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        defaultValue="false"
                        fieldLabel="required"
                        name="./required"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <one
                                jcr:primaryType="nt:unstructured"
                                text="true"
                                value="true"/>
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="false"
                                value="false"/>
                        </options>
                    </required>
                    <ngRequired
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        defaultValue="false"
                        fieldLabel="ng-required"
                        name="./ng-required"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <one
                                jcr:primaryType="nt:unstructured"
                                text="true"
                                value="true"/>
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="false"
                                value="false"/>
                        </options>
                    </ngRequired>
                    <ngMinLength
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="ng-minlength"
                        name="./ng-minlength"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <ngMaxLength
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="ng-maxlength"
                        name="./ng-maxlength"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <ngPattern
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="ng-pattern"
                        name="./ng-pattern"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <ngChange
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="ng-change"
                        name="./ng-change"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <ngTrim
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="ng-trim"
                        name="./ng-trim"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <cssClass
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        fieldLabel="CSS Class name"
                        name="./class"
                        validateOnBlur="true"
                        xtype="textfield"/>
                </items>
            </optionalItems>
        </items>
    </items>
</jcr:root>
